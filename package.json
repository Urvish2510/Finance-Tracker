{
  "name": "finance-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "server:dev": "cross-env NODE_ENV=development nodemon server/server.js",
    "server:prod": "cross-env NODE_ENV=production node server/server.js",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "seed": "node server/seedDatabase.js",
    "seed:dev": "cross-env NODE_ENV=development node server/seedDatabase.js",
    "seed:prod": "cross-env NODE_ENV=production node server/seedDatabase.js",
    "start": "npm run server:prod",
    "deploy": "npm run build && npm run start"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "terser": "^5.43.1",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7"
  }
}
